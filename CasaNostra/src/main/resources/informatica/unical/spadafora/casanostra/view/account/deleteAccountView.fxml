<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="informatica.unical.spadafora.casanostra.controller.account.DeleteAccountController">
   <children>
      <VBox alignment="CENTER" spacing="70.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label styleClass="labelTitle" text="Delete Your Account">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label styleClass="labelDescription" text="your account and all of  your data &#10;will be permanently deleted" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#deleteAccountSubmit" styleClass="dangerButton" text="Delete Account">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" onMouseClicked="#goBack" spacing="20.0" styleClass="sfondoGoBack" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <children>
            <FontIcon iconColor="WHITE" iconLiteral="mdi2k-keyboard-backspace" iconSize="50" styleClass="formIcon" />
            <Label text="Go Back&#10;" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
</AnchorPane>
